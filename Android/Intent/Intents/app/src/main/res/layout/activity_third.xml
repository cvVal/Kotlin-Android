<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.alo.seve.myapplication.ThirdActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Número telefónico"
        android:ems="10"
        android:inputType="phone"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="47dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="47dp"
        android:layout_marginStart="49dp" />

    <EditText
        android:id="@+id/editTextWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="www.algo.com"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="120dp"
        app:layout_constraintStart_toStartOf="@+id/editTextPhone"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonWeb"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonWeb" />

    <ImageButton
        android:id="@+id/imageButtonPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/sym_action_call"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="47dp"
        app:layout_constraintTop_toTopOf="@+id/editTextPhone"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@+id/editTextPhone" />

    <ImageButton
        android:id="@+id/imageButtonWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="?android:attr/actionModeWebSearchDrawable"
        tools:layout_editor_absoluteY="120dp"
        tools:layout_editor_absoluteX="276dp"
        android:layout_marginTop="27dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPhone"
        app:layout_constraintStart_toEndOf="@+id/editTextWeb" />

    <Button
        android:id="@+id/buttonEmailMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Escríbeme"
        android:drawableStart="@mipmap/ic_email"
        android:drawablePadding="10dp"
        android:paddingEnd="19dp"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="334dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonContactPhone" />

    <Button
        android:id="@+id/buttonContactPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Contáctame"
        android:drawableStart="@mipmap/ic_phone"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="72dp" />

    <ImageButton
        android:id="@+id/imageButtonCamera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="475dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>
